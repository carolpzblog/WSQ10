  for (int i=0;i<x; i+=1){
    cout<<"dime un numero"<<endl;
    cin>> num[i];
  }
  sumita= suma(x,num);
  promediobebe= promedio (x, sumita);
  cout<<"la suma es "<< suma(x,num)<<endl;
  cout<<"el promedio es "<< promedio(x, sumita)<<endl;
  cout<< "la desviacion es "<< desvia (num, promediobebe, x)<<endl;

